<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewRandomUser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/randomUserName"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:text="@string/text"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/imageViewRandomUser"
        app:layout_constraintTop_toTopOf="@+id/imageViewRandomUser"
        app:layout_constraintVertical_bias="0.121" />

    <TextView
        android:id="@+id/randomUserAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/text"
        app:layout_constraintEnd_toEndOf="@+id/randomUserName"
        app:layout_constraintStart_toStartOf="@+id/randomUserName"
        app:layout_constraintTop_toBottomOf="@+id/randomUserName" />

    <TextView
        android:id="@+id/randomUserMail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/randomUserAddress"
        app:layout_constraintStart_toStartOf="@+id/randomUserAddress"
        app:layout_constraintTop_toBottomOf="@+id/randomUserAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>